.side-bar
  .side-bar__header
    .side-box
      %p.user-name
        = current_user.name
      %ul.iconlist
        %li.icon
          = link_to new_group_path do
            = icon('far', 'edit', class: "far-edit")
        %li.icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog' , class: "fas-cog")
  .group-list
    -# .group
    -#   .group--name techcamp
    -#   .group--message まだメッセージがありません
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message